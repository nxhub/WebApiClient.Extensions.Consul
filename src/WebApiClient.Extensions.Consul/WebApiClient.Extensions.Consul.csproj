<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>0.0.3</Version>
    <Authors>NXHub</Authors>
    <Company>NXHub</Company>
    <Copyright>Copyright © NXHub</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>nxhub webapiclientcore consul</PackageTags>
    <Description>提供 WebApiClientCore 的服务发现功能：services.AddHttpApiClient&lt;ITestApi&gt;("consul_service");</Description>
    <PackageReleaseNotes>修改图标。</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/nxhub/WebApiClient.Extensions.Consul</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nxhub/WebApiClient.Extensions.Consul.git</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WebApiClientCore" Version="1.0.4" />
    <PackageReference Include="NXHub.Consul.AspNetCore" Version="0.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\CachingExtensions\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
